# Database Configuration
DB_HOST=localhost
DB_PORT=27017
DB_NAME=mkulimanet
MONGODB_URI=mongodb://localhost:27017/mkulimanet

# JWT Configuration for Authentication
JWT_SECRET=mkulimanet-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Cloudinary Configuration for Media Uploads
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_URL=cloudinary://your_api_key:your_api_secret@your_cloud_name

# Email Service Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@mkulimanet.com

# Server Configuration
PORT=5000
NODE_ENV=development
BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# API Configuration
API_VERSION=v1
API_BASE_PATH=/api

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,image/gif,image/webp

# Socket.IO Configuration (for real-time features)
SOCKET_IO_PORT=5001
SOCKET_IO_CORS_ORIGIN=http://localhost:3000

# Payment Gateway Configuration (if needed in future)
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Third-party API Keys
WEATHER_API_KEY=your_weather_api_key
GEOCODING_API_KEY=your_geocoding_api_key

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=false

# Session Configuration
SESSION_SECRET=mkulimanet-session-secret-key
SESSION_COOKIE_MAXAGE=24 * 60 * 60 * 1000  # 24 hours